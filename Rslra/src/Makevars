PKG_LIBS=$(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) -lgsl -lgslcblas 
PKG_CFLAGS+=-DBUILD_R_PACKAGE

.PHONY: all clean shlib-clean

SLRA_OBJS=slra/slra.o slra/slra_common.o slra/slra_func.o # slra/slra_func_old.o
RSLRA_OBJS=Rslra.o

OBJECTS=$(RSLRA_OBJS) $(SLRA_OBJS)  $(SLICOT_OBJS) 

all: $(SHLIB)

clean:
	rm -f $(OBJECTS) $(SHLIB)
